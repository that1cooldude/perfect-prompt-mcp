{
  "name": "perfect-prompt-mcp",
  "version": "1.0.0",
  "description": "MCP server for AI-powered prompt enhancement",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/unified-server.ts --mcp",
    "dev:web": "tsx watch src/unified-server.ts",
    "build": "tsc",
    "start": "node dist/unified-server.js",
    "start:mcp": "node dist/unified-server.js --mcp",
    "start:remote-mcp": "node dist/unified-server.js --remote-mcp",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "prompt-enhancement",
    "ai",
    "claude",
    "typingmind"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.0"
  }
}